{{#if field.placeholders}}
  <div class="placeholders-list">
    {{#each field.placeholders as |placeholder|}}
      <span class="placeholder-item">{{placeholder}}</span>
    {{/each}}
  </div>
{{/if}}

{{component (concat "fields/da-" field.component "-field")
  field=field
  onChangeField=onChangeField
  label=(i18n (concat "discourse_automation.scriptables." automation.script.id ".fields." field.name ".label"))
}}
